 enter ~/dev/ft
   export GIT_AUTHOR_NAME='Robin Marr'
   export GIT_AUTHOR_EMAIL='robin.marr@ft.com'
   export GIT_COMMITTER_NAME='Robin Marr'
   export GIT_COMMITTER_EMAIL='robin.marr@ft.com'
